<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetConfLatamApp.Views.AppShell"
       xmlns:views="clr-namespace:NetConfLatamApp.Views"
       Title=".NET Conf Latam 2021"
       FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Sessions"
                      ContentTemplate="{DataTemplate views:SessionsListView}"/>

        <ShellContent Title="Attendees"
                      ContentTemplate="{DataTemplate views:AttendeesListView}"/>
    </FlyoutItem>
    
</Shell>